<IfModule authz_core_module>
    RewriteEngine On
	RewriteCond %{HTTPS} !on
	RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}
    RewriteBase /
    RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^(.*)$ index.php/$1 [L]  
</IfModule>
<IfModule !authz_core_module>
    Deny from all
</IfModule>
